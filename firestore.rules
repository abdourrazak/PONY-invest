rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles sécurisées pour les utilisateurs
    match /users/{userId} {
      // Seul l'utilisateur authentifié peut lire/écrire ses propres données
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour la validation des codes de parrainage
    match /users/{userId} {
      // Permettre la lecture du referralCode uniquement pour validation
      allow read: if request.auth != null && 
                     resource.data.keys().hasOnly(['referralCode', 'numeroTel']);
    }
    
    // Règles pour les données publiques (si nécessaire)
    match /public/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Pas d'écriture dans public
    }
    
    // Règles par défaut - tout refuser
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
